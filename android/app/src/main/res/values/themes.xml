<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.TorChat" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.TorChat.Dark" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.TorChat.Splash" parent="Theme.TorChat">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
